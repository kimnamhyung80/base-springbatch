<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
    <!-- Spring Batch Enterprise Framework - Logback Configuration                       -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════ -->

    <!-- 프로퍼티 정의 -->
    <property name="LOG_PATH" value="${LOG_FILE_PATH:-./logs}"/>
    <property name="APP_NAME" value="${APP_NAME:-springbatch}"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%X{jobName:-SYSTEM}] [%X{traceId:-}] %-5level %logger{50} - %msg%n"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="MAX_HISTORY" value="30"/>
    <property name="TOTAL_SIZE_CAP" value="10GB"/>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Console Appender                                                                  -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Application Log File Appender                                                     -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Batch Job Log File Appender                                                       -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="BATCH_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/batch-job.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/batch-job.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Error Log File Appender                                                           -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- SQL Log File Appender                                                             -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/sql.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/sql.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Async Appender (성능 향상)                                                         -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <appender name="ASYNC_APP" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="APP_FILE"/>
    </appender>

    <appender name="ASYNC_BATCH" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="BATCH_FILE"/>
    </appender>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Logger 설정                                                                        -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    
    <!-- Application Logger -->
    <logger name="com.framework.springbatch" level="${LOG_LEVEL_APP:-DEBUG}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APP"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Batch Logger -->
    <logger name="com.framework.springbatch.batch" level="${LOG_LEVEL_BATCH:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_BATCH"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Spring Batch Logger -->
    <logger name="org.springframework.batch" level="${LOG_LEVEL_BATCH:-INFO}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_BATCH"/>
    </logger>

    <!-- SQL Logger -->
    <logger name="org.hibernate.SQL" level="${LOG_LEVEL_SQL:-DEBUG}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SQL_FILE"/>
    </logger>
    
    <logger name="org.hibernate.type.descriptor.sql" level="${LOG_LEVEL_SQL_PARAM:-TRACE}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <logger name="org.springframework.jdbc" level="${LOG_LEVEL_SQL:-DEBUG}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- MyBatis Logger -->
    <logger name="com.framework.springbatch.domain.**.mapper" level="${LOG_LEVEL_SQL:-DEBUG}" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- Framework Logger (줄이기) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.quartz" level="INFO"/>

    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <!-- Root Logger                                                                        -->
    <!-- ───────────────────────────────────────────────────────────────────────────────── -->
    <root level="${LOG_LEVEL_ROOT:-INFO}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APP"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>
